; copy all scripts to bkp_scripts drawer

set dest "ram:scripts"
delete "$dest" ALL

makedir "$dest"

; sources drawer
makedir "$dest/Sources"

; start compiler script
copy /Sources/start_compilers "$dest/Sources/"

; example0
makedir "$dest/Sources/example0"
makedir "$dest/Sources/example0/scripts"
copy "/Sources/example0/scripts/#?" "$dest/Sources/example0/scripts/"

; example1
