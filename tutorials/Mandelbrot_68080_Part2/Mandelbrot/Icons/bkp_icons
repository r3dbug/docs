; copy all icons to bkp drawer

set dest "ram:bkp"
delete "$dest" ALL

makedir ram:bkp

; Mandelbrot (main drawer)
makedir "$dest/Mandelbrot"
copy //Mandelbrot.info "$dest/"

; root directory drawers
makedir "$dest/Mandelbrot/Configure"
makedir "$dest/Mandelbrot/Icons"
makedir "$dest/Mandelbrot/Original"
makedir "$dest/Mandelbrot/Scripts"
makedir "$dest/Mandelbrot/Sources"
copy /#?.info "$dest/Mandelbrot/"

; sources drawer icons
copy /sources/#?.info "$dest/Mandelbrot/Sources/"

; example0
makedir "$dest/Mandelbrot/Sources/example0"
copy /sources/example0/#?.info "$dest/Mandelbrot/Sources/example0/"

; example0/asm
makedir "$dest/Mandelbrot/Sources/example0/asm"
copy /sources/example0/asm/#?.info "$dest/Mandelbrot/Sources/example0/asm"

; example0/bin
makedir "$dest/Mandelbrot/Sources/example0/bin"
copy /sources/example0/bin/#?.info "$dest/Mandelbrot/Sources/example0/bin"

makedir "$dest/Mandelbrot/Sources/example0/scripts"
copy /sources/example0/scripts/#?.info "$dest/Mandelbrot/Sources/example0/scripts"



; example1
makedir "$dest/Mandelbrot/Sources/example1"
